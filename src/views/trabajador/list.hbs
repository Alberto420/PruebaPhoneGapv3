<div class="container p-4">
    <h1 class="text-align"><u>LISTADO DE TRABAJADORES</u></h1>
    <div class="row">
       <div class="col-md-12 mt-4 text-center   my-custom-scrollbar">
            <table class="table table-primary table-hover table-bordered ">
                <thead >
                        <tr>
                            
                            <th>NOMBRE</th>
                            <th>RUT</th>
                            <th>EDAD</th>
                            <th>FECHA DE INGRESO</th>
                            <th>FECHA DE EGRESO</th>
                            <th>SALARIO</th>
                            <th>AREA DE TRABAJO</th>
                        </tr>
                </thead>
                <tbody>
                            {{#each trabajador }}
                            <tr>    
                                 
                                <td>{{this.Nombre}} </td>
                                <td>{{this.Rut}} </td>
                                <td>{{this.Edad}} </td>
                                <td>{{this.Fecha_Ingr}} </td>
                                <td>{{this.Fecha_Egr}} </td>
                                <td>${{this.Salario}} </td>  
                                <td>{{this.Area_Trabajo}} </td>
                                <td>
                                    <a href="/trabajador/delete/{{ID}}" class="btn btn-danger">Eliminar</a>
                                    <a href="/trabajador/edit/{{ID}}" class="btn btn-warning">Modificar</a>
                                </td>
                            </tr>
                            {{/each}}
                </tbody>
            </table>
            
        </div>
        
        
    </div>
</div>
