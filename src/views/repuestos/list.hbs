<div class="container p-4">
    <h1 class="text-align"><u>LISTADO DE REPUESTOS</u></h1>
    <div class="row">
       <div class="col-md-12 mt-4 text-center my-custom-scrollbar">
            <table class="table table-success table-hover table-bordered ">
                <thead >
                        <tr>
                            
                            <th>NOMBRE</th>
                            <th>TIPO</th>
                            <th>CATEGORIA</th>
                            <th>MARCA</th>
                            <th>STOCK</th>
                            <th>PRECIO COSTO</th>
                            <th>PRECIO VENTA</th>
                        </tr>
                </thead>
                <tbody>
                            {{#each repuestos }}
                            <tr>    
                                 
                                <td>{{this.Nombre}} </td>
                                <td>{{this.Tipo}} </td>
                                <td>{{this.Categoria}} </td>
                                <td>{{this.Marca}} </td>
                                <td>{{this.Stock}} </td>
                                <td>${{this.Precio_costo}} </td>  
                                <td>${{this.Precio_venta}} </td>
                                <td>
                                    <a href="/repuestos/delete/{{ID}}" class="btn btn-danger">Eliminar</a>
                                    <a href="/repuestos/edit/{{ID}}" class="btn btn-warning">Modificar</a>
                                </td>
                            </tr>
                            {{/each}}
                </tbody>
            </table>
            
        </div>
        
        
    </div>
</div>
