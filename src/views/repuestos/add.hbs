<div class="container p-4">
    <div class="row">
        
        <div class="col-md-5 mx-auto">
        <h1 class="text-center p-2 "><u>AGREGAR REPUESTOS</u></h1>
            <div class="card">
                <script src="validar.js"></script>
                <div class="card-body" style="primary">
                    <form action="/repuestos/add" method="POST" onsubmit="return validarRepu();">
                        
                        <div class="form-group">
                            
                            <h6>Ingresa Nombre:</h6>
                            <input type="text" name="nombre" class="form-control" placeholder="..." autofocus required>
                        </div>
                        <div class="form-group">
                            <h6>Ingresa Tipo:</h6>
                            <input type="text" name="tipo" class="form-control" placeholder="..."required>
                        </div>
                        <div class="form-group">
                            <h6>Ingresa Categoria:</h6>
                            <input type="text" name="categoria" class="form-control" placeholder="..."required>
                        </div>
                        <div class="form-group">
                            <h6>Ingresa Marca:</h6>
                            <input type="text" name="marca" class="form-control" required>
                        </div>
                        <div class="form-group">
                             <h6>Ingresa Stock:</h6>
                            <input type="number" name="stock" class="form-control"required>
                        </div>
                        <div class="form-group">
                             <h6>Ingresa Precio de costo:</h6>
                            <input type="number" name="precio_costo" class="form-control" placeholder="..."required>
                        </div>
                        <div class="form-group">
                             <h6>Ingresa Precio de venta:</h6>
                            <input type="number" name="precio_venta" class="form-control" placeholder="..."required>
                        </div>
                    
                        <div class="form-group">
                            <button class="btn btn-warning btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>